OUTPUT_FORMAT("coff-tic80")
SECTIONS
{
  .text  : {
    *(.init)
    *(.fini)
    *(.text)
  }
  .const ALIGN(4) : {
    *(.const)
  }
  .ctors ALIGN(4) : {
     . = ALIGN(4);
     ___CTOR_LIST__ = .;
     LONG(-1)
    *(.ctors)
     ___CTOR_END__ = .;
     LONG(0)
  }
  .dtors ALIGN(4) : {
     ___DTOR_LIST__ = .;
     LONG(-1)
     *(.dtors)
     ___DTOR_END__ = .;
     LONG(0)
  }
  .data : {
    *(.data)
    ;
  }
  .bss : {
    ;
    *(.bss)
    *(COMMON)
     ;
     ;
  }
  .stab  0  :
  {
    [ .stab ]
  }
  .stabstr  0  :
  {
    [ .stabstr ]
  }
}
